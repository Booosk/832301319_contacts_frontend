/* SEVENTEEN应援色主题 */
page {
  --primary-color: #92A8D1;    /* Serenity 静谧蓝 */
  --secondary-color: #F7CAC9;  /* Rose Quartz 玫瑰石英粉 */
  --accent-color: #A8C1D4;     /* 淡蓝色过渡 */
  --light-pink: #FBEBE9;       /* 浅粉色 */
  --light-blue: #E8EEFF;       /* 浅蓝色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --background-color: #F8F9FD;
  --card-bg: #ffffff;
  --border-color: #E1E8F5;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
}

page {
  background-color: var(--background-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: var(--text-primary);
}

.container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding: 20rpx;
}

/* 通用卡片样式 */
.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(146, 168, 209, 0.1);
  border: 2rpx solid var(--border-color);
}

/* 按钮样式 */
.primary-btn {
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 88rpx;
  line-height: 88rpx;
  border: 2rpx solid #85A0CC;
}

.primary-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.secondary-btn {
  background: linear-gradient(135deg, var(--secondary-color), #F4A6A3);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 88rpx;
  line-height: 88rpx;
  border: 2rpx solid #F2BAB8;
}

/* 输入框样式 */
.input-field {
  border: 2rpx solid var(--border-color);
  border-radius: 15rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: white;
  width: 100%;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 10rpx rgba(146, 168, 209, 0.3);
}

/* 标签样式 */
.label {
  display: block;
  font-size: 30rpx;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.label.required::after {
  content: " *";
  color: var(--error-color);
}