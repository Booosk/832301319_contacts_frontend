.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #F8F9FD 0%, #F0F4FF 100%);
  min-height: 100vh;
}

/* 头部 */
.header {
  margin-bottom: 30rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #F8F9FD 100%);
  border: 2rpx solid #E1E8F5;
}

.title-section {
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #92A8D1, #A8C1D4);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #92A8D1;
}

/* 表单 */
.form {
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #F8F9FD 100%);
  border: 2rpx solid #E1E8F5;
}

.form-item {
  margin-bottom: 10rpx;
  position: relative;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 5rpx;
  font-weight: 500;
}

.label.required::after {
  content: " *";
  color: #ff4d4f;
}

/* 照片上传区域 */
.photo-section {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.photo-upload-area {
  width: 200rpx;
  height: 200rpx;
  border: 3rpx dashed #E1E8F5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F8F9FD;
  transition: all 0.3s ease;
  overflow: hidden;
}

.photo-upload-area:active {
  background: #E8EEFF;
  border-color: #92A8D1;
}

.upload-placeholder {
  text-align: center;
  color: #999;
}

.upload-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 15rpx;
  color: #92A8D1;
}

.upload-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.upload-tip {
  display: block;
  font-size: 22rpx;
  color: #ccc;
}

.photo-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.photo-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 16rpx;
}

.photo-preview:active .photo-overlay {
  opacity: 1;
}

.overlay-text {
  color: white;
  font-size: 24rpx;
}

.remove-photo-btn {
  background: linear-gradient(135deg, #F7CAC9, #F4A6A3);
  color: white;
  border: none;
  border-radius: 20rpx;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

.uploading-text {
  display: block;
  color: #92A8D1;
  font-size: 24rpx;
  margin-top: 15rpx;
  text-align: center;
}

/* 输入框 */
.input-field {
  border: 2rpx solid #E1E8F5;
  border-radius: 15rpx;
  padding: 20rpx 20rpx; 
  font-size: 28rpx;
  background: white;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
  height: 80rpx; 
  line-height: 20rpx; /* 确保文字垂直居中 */
  min-height: 80rpx; 
}

.input-field:focus {
  border-color: #92A8D1;
  box-shadow: 0 0 10rpx rgba(146, 168, 209, 0.3);
}

.input-field.error {
  border-color: #ff4d4f;
  background: #fff2f0;
}

.error-text {
  display: block;
  color: #ff4d4f;
  font-size: 26rpx;
  margin-top: 20rpx;
  padding: 8rpx 15rpx;
  background: rgba(255, 77, 79, 0.08);
  border-radius: 8rpx;
  border-left: 4rpx solid #ff4d4f;
  line-height: 1.4;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 30rpx;
  margin-top: 60rpx;
}

.primary-btn, .secondary-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 36rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
  display: flex;           
  align-items: center;    
  justify-content: center; 
  text-align: center; 
}

.primary-btn {
  background: linear-gradient(135deg, #92A8D1, #A8C1D4);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(146, 168, 209, 0.4);
  border: 2rpx solid #85A0CC;
}

.primary-btn:active:not(:disabled) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(146, 168, 209, 0.5);
}

.primary-btn:disabled {
  background: #ccc;
  box-shadow: none;
  transform: none;
  border-color: #ccc;
}

.secondary-btn {
  background: linear-gradient(135deg, #F7CAC9, #F4A6A3);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(247, 202, 201, 0.4);
  border: 2rpx solid #F2BAB8;
}

.secondary-btn:active:not(:disabled) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(247, 202, 201, 0.5);
}

.secondary-btn:disabled {
  background: #ccc;
  box-shadow: none;
  transform: none;
  border-color: #ccc;
}

/* 提示卡片 */
.tips-card {
  background: linear-gradient(135deg, #fffaf0, #fff2e6);
  border: 2rpx solid #ffe7ba;
  border-radius: 16rpx;
  margin-top: 20rpx;
  min-height: 280rpx; /* 确保最小高度 */
}

.tips-content {
  padding: 40rpx 35rpx;
}

.tips-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #fa8c16;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.tip-item {
  font-size: 28rpx;
  color: #fa8c16;
  margin-bottom: 20rpx;
  padding-left: 40rpx;
  position: relative;
  line-height: 1.6;
  min-height: 40rpx; /* 确保每行有足够高度 */
  display: flex;
  align-items: center;
}

.tip-item::before {
  content: "•";
  position: absolute;
  left: 20rpx;
  color: #fa8c16;
  font-size: 32rpx;
  font-weight: bold;
}