.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #F8F9FD 0%, #F0F4FF 100%);
  min-height: 100vh;
}
/* 调试卡片 */
.debug-card {
  padding: 30rpx;
  background: linear-gradient(135deg, #fff2e8, #ffe7d6);
  border: 2rpx solid #ffbb96;
  margin-bottom: 30rpx;
}

.debug-btn {
  background: #fa8c16;
  color: white;
  border: none;
  border-radius: 20rpx;
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
}
/* 头部 */
.header {
  margin-bottom: 30rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #F8F9FD 100%);
  border: 2rpx solid #E1E8F5;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title-section {
  flex: 1;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #92A8D1, #A8C1D4);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #92A8D1;
  margin-bottom: 8rpx;
}

.change-indicator {
  font-size: 22rpx;
  color: #faad14;
  background: #fffbe6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ffe58f;
}

.back-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 25rpx;
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 表单 */
.form {
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #F8F9FD 100%);
  border: 2rpx solid #E1E8F5;
}

.form-item {
  margin-bottom: 50rpx;
  position: relative;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 25rpx;
  font-weight: 500;
}

.label.required::after {
  content: " *";
  color: #ff4d4f;
}

/* 照片上传区域 */
.photo-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.photo-upload-area {
  width: 200rpx;
  height: 200rpx;
  border: 3rpx dashed #E1E8F5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F8F9FD;
  transition: all 0.3s ease;
  overflow: hidden;
}

.photo-upload-area:active {
  background: #E8EEFF;
  border-color: #92A8D1;
}

.upload-placeholder {
  text-align: center;
  color: #999;
}

.upload-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 15rpx;
  color: #92A8D1;
}

.upload-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.upload-tip {
  display: block;
  font-size: 22rpx;
  color: #ccc;
}

.photo-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.photo-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 16rpx;
}

.photo-preview:active .photo-overlay {
  opacity: 1;
}

.overlay-text {
  color: white;
  font-size: 24rpx;
}

.remove-photo-btn {
  background: linear-gradient(135deg, #F7CAC9, #F4A6A3);
  color: white;
  border: none;
  border-radius: 20rpx;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 36rpx;
  flex-shrink: 0;
  align-self: center;
  margin-top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.uploading-text {
  display: block;
  color: #92A8D1;
  font-size: 24rpx;
  margin-top: 15rpx;
  text-align: center;
}

/* 输入框 */
.input-field {
  border: 2rpx solid #E1E8F5;
  border-radius: 15rpx;
  padding: 24rpx;
  font-size: 28rpx;
  background: white;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
  min-height: 80rpx; 
  line-height: 1.4; 
  white-space: nowrap; 
  overflow: visible; 
  text-overflow: clip;
}

.input-field:focus {
  border-color: #92A8D1;
  box-shadow: 0 0 10rpx rgba(146, 168, 209, 0.3);
}

.input-field.error {
  border-color: #ff4d4f;
  background: #fff2f0;
}

.error-text {
  display: block;
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 15rpx;
  padding-left: 10rpx;
  line-height: 1.4;
  white-space: normal; /* 错误信息可以换行 */
  word-wrap: break-word;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 30rpx;
  margin-top: 60rpx;
}

.primary-btn, .secondary-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.primary-btn {
  background: linear-gradient(135deg, #92A8D1, #A8C1D4);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(146, 168, 209, 0.4);
  border: 2rpx solid #85A0CC;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.primary-btn:active:not(:disabled) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(146, 168, 209, 0.5);
}

.primary-btn:disabled {
  background: #ccc;
  box-shadow: none;
  transform: none;
  border-color: #ccc;
}

.secondary-btn {
  background: linear-gradient(135deg, #F7CAC9, #F4A6A3);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(247, 202, 201, 0.4);
  border: 2rpx solid #F2BAB8;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.secondary-btn:active:not(:disabled) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(247, 202, 201, 0.5);
}

.secondary-btn:disabled {
  background: #ccc;
  box-shadow: none;
  transform: none;
  border-color: #ccc;
}

/* 信息卡片 */
.info-card {
  padding: 30rpx;
  background: linear-gradient(135deg, #f6ffed, #f0fff3);
  border: 2rpx solid #b7eb8f;
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.info-label {
  color: #666;
  min-width: 160rpx;
}

.info-value {
  color: #333;
  flex: 1;
}